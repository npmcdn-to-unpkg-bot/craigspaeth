@require '../node_modules/nib/index.styl'
global-reset()

twitter-color = #46B9F1
github-color = #5791CA
linkedin-color = #006599
tumblr-color = #35506B
artsy-color = #6A00CC
border-color = rgba(255,255,255,0.4)
text-color = rgba(255,255,255,0.8)
margin = 30px
font-smoothing()
  vendor('font-smoothing', arguments)

body
  background-color black
  color text-color
  font-family 'Open Sans', sans-serif
  font-size 16px
  line-height 1.4em
  transition background-color 0.5s cubic-bezier(0.645, 0.045, 0.355, 1.000)
  font-smoothing antialiased
  &.twitter
    background-color twitter-color
  &.github
    background-color github-color
  &.linkedin
    background-color linkedin-color
  &.tumblr
    background-color tumblr-color
  &.artsy
    background-color artsy-color
h1
  margin margin 0
  text-align center
  font-size 30px
  font-weight 600
  text-transform uppercase
  letter-spacing 8px
  padding-bottom 3px
h2
  text-align center
  color white
  a
    padding-bottom 1px
    padding-left 2px
a
  color text-color
  text-decoration none
  transition color 0.2s
  font-weight 700
  text-transform uppercase
  letter-spacing 1px
  font-size 13px
  &:hover, &:active
    color white
ul
  margin margin auto
  text-align center
  a
    color rgba(255,255,255,0.8)
    letter-spacing 3px
  li
    display inline-block
    margin-right 17px
    padding-right @margin-right
    border-right 1px solid rgba(255,255,255,0.12)
    a
      padding-bottom 3px
      font-size 12px
    &:last-child
      margin-right 0
      border-right 0
      padding-right 0

#container
  top 50%
  position absolute
  margin-top -125px
  display block
  left 50%
  margin-left -282px

.mirror-container
  width 100vw
  height 100vh
  position relative
  .mirror-img-container
    width 100%
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    text-align center
    img
      display inline-block
      max-width 100%
      max-height 100%
      max-height 80vh
  .mirror-caption
    color #aaa
    margin-top 30px
    font-family Baskerville, Georgia, serif
    font-size 21px
    display block
    text-align center
  .mirror-iframe-container
    position absolute
    top 50%
    left 50%
    width 768px
    height 432px
    transform translate(-50%, -50%)

.flickity-page-dots
  display none

.flickity-prev-next-button
  background transparent
  height 100vh
  padding 0 50px
  border-radius 0
  right 0
  opacity 0.5
  &:hover
    background transparent
